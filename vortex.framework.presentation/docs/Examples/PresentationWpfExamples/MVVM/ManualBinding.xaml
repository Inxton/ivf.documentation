<UserControl x:Class="PresentationWpfExamples.MVVM.ManualBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationWpfExamples.MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Header="Primitive binding">
            <StackPanel DataContext="{Binding MAIN._counter}">
                <GroupBox Header="{Binding AttributeName}" DataContext="{Binding _doCount}">
                    <CheckBox IsChecked="{Binding Cyclic}"></CheckBox>
                </GroupBox>
                <GroupBox Header="{Binding AttributeName}" DataContext="{Binding _counterValue}">
                    <TextBlock Text="{Binding Cyclic}"></TextBlock>
                </GroupBox>
                <GroupBox Header="{Binding AttributeName}" DataContext="{Binding _resetCounterValue}">
                    <CheckBox IsChecked="{Binding Cyclic}"></CheckBox>
                </GroupBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
